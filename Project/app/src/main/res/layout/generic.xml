<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Teachertxt"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Teacher"
        android:textColor="#000000"
        android:textSize="28dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/classtxt"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/Teachertxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Class"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />



    <android.support.design.widget.TextInputEditText
        android:id="@+id/class_id"
        android:layout_width="260dp"
        android:layout_height="60dp"

        android:layout_below="@id/Teachertxt"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/classtxt"
        android:backgroundTint="#000000"
        android:inputType="text" />




    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Subjecttxt"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/classtxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Subject"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/Subject_id"
        android:layout_width="260dp"
        android:layout_height="60dp"


        android:layout_below="@id/classtxt"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/Subjecttxt"
        android:backgroundTint="#000000"
        android:inputType="text" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Datetxt"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/Subjecttxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Date"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/date_id"
        android:layout_width="260dp"
        android:layout_height="60dp"


        android:layout_below="@id/Subjecttxt"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/Subjecttxt"
        android:backgroundTint="#000000"
        android:inputType="text" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Diarytxt"
        android:layout_width="110dp"
        android:layout_height="50dp"
        android:layout_below="@id/Datetxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:text="Diary"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <android.support.design.widget.TextInputEditText
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:id="@+id/txt_id"
        android:layout_below="@id/Diarytxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:inputType="text"
        android:background="#FFFFFF"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/Savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_id"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="Save"

        android:background="@drawable/button_background1"
        android:textColor="#000000"
        android:textSize="24dp" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/Logoutbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_id"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="Logout"
        android:layout_toRightOf="@id/Savebtn"
        android:layout_marginRight="60dp"
        android:textColor="#000000"
        android:textSize="20dp"
        android:background="@drawable/button_background1"/>


</RelativeLayout>