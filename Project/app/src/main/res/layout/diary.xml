<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Teachertxt"
        android:layout_width="380dp"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:background="#FFFFFF"
        android:gravity="center"
        android:text="Teacher"
        android:textColor="#000000"
        android:textSize="28dp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/classtxt"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/Teachertxt"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Class"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/about_subjectbtn"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/classtxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="About Subject"
        android:background="@drawable/button_background"
        android:textSize="18sp"
        android:textStyle="bold" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/genericbtn"
        android:layout_width="175dp"
        android:layout_height="30dp"
        android:layout_below="@id/classtxt"

        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/about_subjectbtn"
        android:text="Generic"
        android:background="@drawable/button_background"
        android:textSize="18sp"
        android:textStyle="bold" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/Gender_id"
        android:layout_width="260dp"
        android:layout_height="50dp"

        android:layout_below="@id/Teachertxt"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/classtxt"
        android:backgroundTint="#000000"
        android:inputType="text" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Studenttxt"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/about_subjectbtn"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Student"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />

    <android.support.design.widget.TextInputEditText
        android:id="@+id/Student_id"
        android:layout_width="260dp"
        android:layout_height="50dp"

        android:layout_below="@id/about_subjectbtn"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/Studenttxt"
        android:backgroundTint="#000000"
        android:inputType="text" />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/Subjecttxt"
        android:layout_width="110dp"
        android:layout_height="40dp"
        android:layout_below="@id/Studenttxt"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="Subject"


        android:textColor="#FFFFFF"
        android:textSize="28dp" />
    <android.support.design.widget.TextInputEditText
        android:id="@+id/Subject_id"
        android:layout_width="260dp"
        android:layout_height="50dp"


        android:layout_below="@id/Student_id"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/Subjecttxt"
        android:backgroundTint="#000000"
        android:inputType="text" />
    <android.support.design.widget.TextInputLayout
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:id="@+id/Search_layout"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="#BDBDBD"

        android:layout_below="@id/Subjecttxt">
        <android.support.design.widget.TextInputEditText
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:id="@+id/Search_id"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:background="#FFFFFF"
            android:drawableLeft="@drawable/search"
            />


    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputEditText
        android:layout_width="340dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:id="@+id/txt_id"
        android:layout_below="@id/Search_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:inputType="text"
        android:background="#FFFFFF"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/Editbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_id"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="15dp"
        android:text="Edit"

        android:background="@drawable/button_background1"
        android:textColor="#000000"
        android:textSize="24dp" />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/Savebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_id"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:text="Save"
        android:layout_toRightOf="@id/Editbtn"
        android:layout_marginRight="60dp"
        android:textColor="#000000"
        android:textSize="24dp"
        android:background="@drawable/button_background1"/>


</RelativeLayout>